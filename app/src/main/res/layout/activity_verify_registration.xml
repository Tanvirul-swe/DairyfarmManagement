<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#00FFFFFF"
    android:padding="10dp"
    tools:context=".Verify_registration">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Verification code : "
            android:textColor="#250404"
            />
        <EditText
            android:inputType="number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/UserRegoptCodeEditTextId"
            android:hint="Check your email or phone"
            android:background="@drawable/edit"


            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reset code"
            android:textColor="#000"
            android:textSize="15sp"
            />

        <Button
            android:layout_marginLeft="190dp"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="Finish"
            android:backgroundTint="#D68E8E"
            android:layout_marginTop="10dp"
            android:textAllCaps="false"
            android:background="@drawable/circlebackground"
            android:id="@+id/SubmitButtonInverifyCodeID"
            />


    </LinearLayout>

</LinearLayout>