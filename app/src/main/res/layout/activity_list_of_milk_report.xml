<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="5"
    tools:context=".List_of_milk_report">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="0.75"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_height="0dp">

        <LinearLayout
           android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:layout_marginRight="10dp"

            android:layout_width="1dp">
            <ImageView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/report"
                />


            </LinearLayout>

        <LinearLayout
            android:layout_weight="2"
            android:orientation="vertical"

            android:layout_height="match_parent"
            android:layout_width="0dp">

            <TextView
                android:layout_marginTop="20sp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dairy daily average of milk yield: "
                android:layout_marginBottom="10dp"
                android:textStyle="normal"
                android:textColor="#080215"
                />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Daily yield per milking cows: "
                android:layout_marginLeft="37dp"
                android:textColor="#080215"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_weight="0.5"
            android:orientation="vertical"

            android:layout_height="match_parent"
            android:layout_width="0dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10"
                android:layout_marginTop="20sp"
                android:id="@+id/average_milk_textviewid"
                android:textColor="#080215"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10"
                android:id="@+id/cow_averageId"
                android:layout_marginTop="10dp"
                android:textColor="#080215"

                />

        </LinearLayout>




    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="3.75"
        android:layout_height="0dp">
        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/milk_listviewID"
            android:dividerHeight="5dp"
            />

    </LinearLayout>
<LinearLayout
   android:layout_width="match_parent"
    android:layout_weight="0.5"
    android:layout_height="0dp">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingId_for_milk_report"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
       android:layout_marginLeft="20sp"
        android:clickable="true"
        android:src="@drawable/pluse"
        app:fabSize="normal"

        />
</LinearLayout>

</LinearLayout>