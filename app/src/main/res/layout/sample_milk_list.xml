<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:padding="10dp"
    android:layout_height="wrap_content">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="25.03.2000"
        android:textSize="15sp"
        android:id="@+id/milking_date"

        />
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
      android:src="@drawable/cowbrast"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="5.0"
        android:textSize="15sp"
        android:textStyle="bold"
        android:id="@+id/totel_milk_amountid"
        android:textColor="#0B0A0A"
        />
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/fidar"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="5.0"
        android:textSize="15sp"
        android:textStyle="bold"
        android:id="@+id/milk_eat_calve_amountid"
        android:textColor="#0B0A0A"
        />
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/milkbottle"

        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="15dp"
        android:text="10"
        android:textStyle="bold"
        android:id="@+id/reminde_milkid"
        android:textColor="#0B0A0A"

        />
</LinearLayout>